<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>
        Fehler verhindern die erfolgreiche Registrierung!</h2>
    <p>Bitte ändern Sie die Eingabe entsprechend der Fehlermeldungen:</p>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg%></li>

      <% end %>
    </ul>
  </div>
<% end %>