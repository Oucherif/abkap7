<%# Übernommen aus "Ruby on Rails Tutorial" von Michael Hartl%>
<h1>Registrierung</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "Passwort" %><br />                                   <%#Übersetzt%>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Passwortwiederholung" %><br />          <%#Übersetzt%>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Registrierung abschließen" %>
  </div>
<% end %>